<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold|italic"

        android:layout_marginTop="100dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_number_groups"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:inputType="number"
        android:hint="@string/number_groups"

        android:background="@drawable/bc_btn_calculate"

        android:paddingHorizontal="8dp"

        android:layout_marginTop="30dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="10dp"

        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edt_number_students"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_number_students"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:inputType="number"
        android:hint="@string/number_students"

        android:background="@drawable/bc_btn_calculate"
        android:paddingHorizontal="8dp"


        android:layout_marginStart="10dp"
        android:layout_marginEnd="100dp"

        app:layout_constraintTop_toTopOf="@id/edt_number_groups"
        app:layout_constraintStart_toEndOf="@id/edt_number_groups"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/bc_btn_calculate"
        android:paddingHorizontal="16dp"

        android:text="@string/calculate"
        android:textColor="@color/stroke_group_item"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@id/edt_number_groups"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_result"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"

        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        app:layout_constraintTop_toBottomOf="@id/btn_result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>